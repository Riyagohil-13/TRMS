@model WebApplication1.Models.Department

@section Styles {
    <link rel="stylesheet" href="~/css/Delete.css" asp-append-version="true" />
}

    <div class="custom-card">
        <h1 class="page-title">Delete Department</h1>
       <p class="warning-text">Are you sure you want to delete this Department?</p>
        <hr />

        <dl class="row details">
            <dt class="col-sm-4">Department ID:</dt>
            <dd class="col-sm-8">@Model.Id</dd>

            <dt class="col-sm-4">Department Name:</dt>
            <dd class="col-sm-8">@Model.Name</dd>
        </dl>
        <form asp-action="Delete">
        
            <input type="hidden" asp-for="Id" />

        <div class="button-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
        </form>
    </div>

