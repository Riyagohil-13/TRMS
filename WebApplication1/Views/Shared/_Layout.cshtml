                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- If user is not logged in, show Login link -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container"  >
        <main role="main" class="pb-3" >
            @RenderBody()
        </main>
    </div>

    <footer class="custom-footer">
        <div class="container">
            <span>&copy; 2025 - <strong>Training Management System</strong></span>
