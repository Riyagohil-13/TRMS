@model WebApplication1.Models.Plant

@section Styles {
    <link rel="stylesheet" href="~/css/Delete.css" asp-append-version="true" />
}

<div class="custom-card">
    <h1 class="page-title">Delete Plant</h1>
    <p class="warning-text">Are you sure you want to delete this Plant?</p>
    
    <hr />

    <dl class="row details">
        <dt class="col-sm-4">Plant ID:</dt>
        <dd class="col-sm-8">@Model.Id</dd>

        <dt class="col-sm-4">Plant Name:</dt>
        <dd class="col-sm-8">@Model.Name</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group button-group">
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
        </div>
    </form>
</div>
