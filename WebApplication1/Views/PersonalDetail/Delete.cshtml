@model WebApplication1.Models.PersonalDetail

@{
    ViewData["Title"] = "Delete Personal Detail";
}

<head>
    <link href="~/css/Delete.css" rel="stylesheet" />
</head>

<div class="custom-card">
    <h1 class="page-title">Delete Personal Detail</h1>

    <p class="warning-text">Are you sure you want to delete this Personal Detail?</p>

    <hr />

    <dl class="row details">
        <dt class="col-sm-3">VTR Id</dt>
        <dd class="col-sm-9">@Model.TraineeId</dd>

        <dt class="col-sm-3">Permanent Address</dt>
        <dd class="col-sm-9">@Model.PermanentAddress</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="button-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
