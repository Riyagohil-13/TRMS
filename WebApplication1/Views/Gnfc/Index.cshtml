@model List<WebApplication1.Models.Gnfc>

<head>
    <link href="~/css/list.css" rel="stylesheet" media="all" />
</head>

<body>
    <h2 class="page-title">Trainee List</h2>
    <div class="card custom-card">
        <div class="card-header custom-card-header">
            <h3 class="italic">
                <a href="/Gnfc/Create" class="btn add-student-btn">
                    <i class="fa fa-plus-circle"></i> Add Detail
                </a>
            </h3>
            <div class="search-container">
                <form class="search-form" asp-action="Index" method="GET">
                    <input name="searchString" class="search-input" type="search" placeholder="Search by name" />
                    <button class="search-btn" type="submit">Search</button>
                    <button class="search-btn m-3" asp-action="Index" type="submit">Back to List</button>
                </form>

            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="table-responsive">
        <table class="custom-table" id="tbl-list">
            <thead>
                <tr>

                    <th>
                        <a style="color:white; text-decoration:none;" asp-action="Index" asp-route-sortOrder="@ViewData["IdSortParam"]" asp-route-searchString="@Context.Request.Query["searchString"]">
                            VTRId
                        </a>
                    </th>
                    <th>
                        <a style="color:white; text-decoration:none;" asp-action="Index" asp-route-sortOrder="@ViewData["IdSortParam"]" asp-route-searchString="@Context.Request.Query["searchString"]">
                            First Name
                        </a>
                    </th>
                    <th>
                        <a style="color:white; text-decoration:none;" asp-action="Index" asp-route-sortOrder="@ViewData["IdSortParam"]" asp-route-searchString="@Context.Request.Query["searchString"]">
                            Last Name
                        </a>
                    </th>
                    
                    <th>Email</th>
                   
                    <th>PhoneNumber</th>
                    @* <th>College</th> *@

                    <th>AcadamicYear</th>
                    <th>Semester</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@(s.Trainee != null ? s.Trainee.VTRId : "Not Assigned")</td>
                        <td>@s.FirstName</td>
                        <td>@s.LastName</td>
                        
                        <td>@s.Email</td>
                        
                        <td>@s.PhoneNumber</td>
                        @* <td>@s.CollegeId</td> *@

                        <td>@s.AcadamicYear</td>
                        <td>@s.Semester</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Gnfc" asp-route-id="@s.Id" class="btn edit-btn "><i class="fa fa-plus-circle"> Edit</i></a>
                            <a asp-action="Delete" asp-controller="Gnfc" asp-route-id="@s.Id" class="btn delete-btn "><i class="fa fa-plus-circle"> Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>








