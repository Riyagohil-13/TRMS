@model WebApplication1.Models.Trainee

@section Styles {
    <link rel="stylesheet" href="~/css/Trainee.css" asp-append-version="true" />
}


<div class="page-container">
    <h1 class="page-title">Add New Trainee</h1>

<form asp-action="Create" method="post" class="custom-card">

    <div class="form-group">
        <label asp-for="VTRId" class="control-label">GNFC ID<span style="color:red">*</span></label>
        <input type="text" asp-for="VTRId" class="form-control" />
        <span asp-validation-for="VTRId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrainingYear" class="control-label">Training Year<span style="color:red">*</span></label>
        <input asp-for="TrainingYear" class="form-control" type="tel" maxlength="4" />
        <span asp-validation-for="TrainingYear" class="text-danger"></span>
    </div>

    <div class="form-group button-group">
        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
        <a asp-action="Index" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Back to List</a>
    </div>
</form>
</div>