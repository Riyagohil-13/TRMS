@model WebApplication1.Models.Posting

@{
    ViewData["Title"] = "Delete Posting";
}

<head>
    <link href="~/css/Delete.css" rel="stylesheet" media="all" />
</head>

<div class="custom-card">
    <h1 class="page-title">Delete Posting</h1>

    <p class="warning-text">Are you sure you want to delete this Posting?</p>

    <hr />

    <dl class="details">
        <dt>Posting ID:</dt>
        <dd>@Model.Id</dd>

        <dt>Plant:</dt>
        <dd>@Model.PlantId</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <div class="button-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
