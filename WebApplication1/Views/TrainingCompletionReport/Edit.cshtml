@model WebApplication1.Models.TrainingCompletionReport

@{
    ViewData["Title"] = "Edit Training Report";
}

<head>
    <link href="~/css/add.css" rel="stylesheet" media="all" />
    <link rel="stylesheet" href="~/css/form_styles.css" asp-append-version="true" />
</head>

<hr />
<h6>Edit Training Completion Report</h6>
<hr />

<div class="card">
    <div class="card-header bg-blue-400">
        <h5><i class='fa fa-check-circle-o'></i> Edit Training Report</h5>
    </div>
    <div class="card-body">
        <div class="row g-6">
            <div class="col-md-15">
                <form asp-action="Edit" method="post">
                    <!-- Hidden field for ReportID to pass the id -->
                    <input type="hidden" asp-for="ReportID" />

                    <!-- FullName Field -->
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control" />
                    </div>

                    <!-- College Field -->
                    <div class="form-group">
                        <label asp-for="College"></label>
                        <input asp-for="College" class="form-control" />
                    </div>

                    <!-- Department Field -->
                    <div class="form-group">
                        <label asp-for="Department"></label>
                        <input asp-for="Department" class="form-control" />
                    </div>

                    <!-- Behaviour Field -->
                    <div class="form-group">
                        <label asp-for="Behaviour"></label>
                        <input asp-for="Behaviour" class="form-control" />
                    </div>

                    <!-- Progress Field -->
                    <div class="form-group">
                        <label asp-for="Progress"></label>
                        <input asp-for="Progress" class="form-control" />
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
                </form>
            </div>
        </div>
    </div>
</div>
