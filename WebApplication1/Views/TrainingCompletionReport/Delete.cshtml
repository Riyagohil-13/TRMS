@model WebApplication1.Models.TrainingCompletionReport

@{
    ViewData["Title"] = "Delete Report";
}
<head>
    <link href="~/css/Delete.css" rel="stylesheet" />
</head>
<div class="custom-card">
    <h1 class="page-title">Delete Training Completion Report</h1>
    <p class="warning-text">Are you sure you want to delete this report?</p>


<hr />

    <dl class="row">
        <dt class="col-sm-3">VTR ID</dt>
        <dd class="col-sm-9">@Model.VTRId</dd>

        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

       </dl> 
    <form asp-action="Delete">
        <input type="hidden" asp-for="ReportID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
   
</div>

