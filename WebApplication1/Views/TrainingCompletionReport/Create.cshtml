@model WebApplication1.Models.ViewModel.TrainingCompletionCreateViewModel

@{
    ViewData["Title"] = "Create Training Completion Report";
}

@section Styles {
    <link rel="stylesheet" href="~/css/trainingcompletion.css" asp-append-version="true" />
}

<div class="custom-card">
    <h2 class="page-title">@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="VTRId">Select Trainee VTR ID</label>
            <select asp-for="VTRId" asp-items="ViewBag.VtrIds" class="form-control" required>
                <option value="">-- Select VTR ID --</option>
            </select>
        </div>

        <div class="form-group button-group">
            <button type="submit" class="btn btn-primary">Generate Report</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
