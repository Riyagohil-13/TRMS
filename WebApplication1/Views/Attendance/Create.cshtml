@{
    ViewBag.Title = "Select Date and Department";
}

@section Styles {
    <link rel="stylesheet" href="~/css/formStyles.css" asp-append-version="true" />
}

<div class="custom-card">
    <h2 class="page-title">@ViewBag.Title</h2>
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" name="date" id="date" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="departmentId">Department:</label>
            <select name="departmentId" id="departmentId" class="form-control" required>
                <option value="">-- Select Department --</option>
                @foreach (var dept in ViewBag.Departments)
                {
                    <option value="@dept.Id">@dept.Name</option>
                }
            </select>
        </div>
        <div class="button-group">
            <button type="submit" class="btn btn-primary">Show Trainees</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
