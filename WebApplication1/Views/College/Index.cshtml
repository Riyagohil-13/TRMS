@model List<WebApplication1.Models.College>

<head>
    <link href="~/css/list.css" rel="stylesheet" media="all" />
</head>


<body>
    <h2 class="page-title">College List</h2>
    <div class="card custom-card">
        <div class="card-header custom-card-header">
            <h3 class="italic">
                <a href="/College/Create" class="btn add-student-btn">
                    <i class="fa fa-plus-circle"></i> Add College
                </a>
            </h3>
            <div class="search-container">
                <form class="search-form" asp-action="Index" method="GET">
                    <input name="searchString" class="search-input" type="search" placeholder="Search by name" />
                    <button class="search-btn" type="submit">Search</button>
                    <button class="search-btn m-3" asp-action="Index" type="submit">Back to List</button>
                </form>

            </div>
        </div>
    </div>


    <!-- Table Section -->
    <div class="table-responsive">
        <table class="custom-table" id="tbl-list">
            <thead>
                <tr>
                <tr>

                    <th>Id</th>
                    <th>College Name</th>
                    <th>Action</th>

                </tr>

            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td>@f.Id</td>
                        <td>@f.CollegeName</td>
                        <td>
                            <a asp-action="Edit" asp-controller="College" asp-route-id="@f.Id" class="btn edit-btn">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-controller="College" asp-route-id="@f.Id" class="btn delete-btn">
                                <i class="fa fa-trash"></i> Delete
                            </a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>









