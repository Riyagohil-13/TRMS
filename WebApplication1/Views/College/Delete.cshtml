@model WebApplication1.Models.College

@section Styles {
    <link rel="stylesheet" href="~/css/Delete.css" asp-append-version="true" />
}



<div class="card custom-card">
    <h1 class="page-title">Delete College</h1>
    <p class="warning-text">Are you sure you want to delete this College?</p>
    
    <hr />

    <dl class="row details-list">
        <dt class="col-sm-4">College ID:</dt>
        <dd class="col-sm-8">@Model.Id</dd>

        <dt class="col-sm-4">College Name:</dt>
        <dd class="col-sm-8">@Model.CollegeName</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <div class="form-group button-group">
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Cancel</a>
        </div>
    </form>
</div>
